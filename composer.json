{
	"name": "nextcloud/privacyidea",
	"description": "Authentication app to perform MFA against privacyIDEA",
	"license": "AGPL-3.0-or-later",
	"authors": [
		{
			"name": "Lukas Matusiewicz",
			"email": "lukas.matusiewicz@netknights.it"
		}
	],
	"autoload": {
		"psr-4": {
			"OCA\\PrivacyIDEA\\": "lib/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all update --ansi"
		],
		"lint": "find . -name \\*.php -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"cs:fix": "php-cs-fixer fix"
	},
	"require": {
		"bamarni/composer-bin-plugin": "^1.8",
		"php": "^8.3",
      "ext-curl": "*"
    },
	"require-dev": {
		"nextcloud/ocp": "dev-stable31",
		"roave/security-advisories": "dev-latest",
		"friendsofphp/php-cs-fixer": "^3.0",
		"php-cs-fixer/custom-fixers": "^2.20"
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true
		},
		"optimize-autoloader": true,
		"sort-packages": true,
		"platform": {
			"php": "8.3"
		}
	}
}
